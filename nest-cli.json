{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "monorepo": true,
    "compilerOptions": {
        "deleteOutDir": true
    },
    "projects": {
        "@gateway/server": {
            "type": "application",
            "root": "apps/gateway",
            "entryFile": "src/main",
            "sourceRoot": "apps/gateway/src",
            "compilerOptions": {
                "tsConfigPath": "apps/gateway/tsconfig.build.json"
            }
        },
        "@auth/server": {
            "type": "application",
            "root": "apps/auth",
            "entryFile": "src/main",
            "sourceRoot": "apps/auth/src",
            "compilerOptions": {
                "tsConfigPath": "apps/auth/tsconfig.build.json"
            }
        },
        "@event/server": {
            "type": "application",
            "root": "apps/event",
            "entryFile": "src/main",
            "sourceRoot": "apps/event/src",
            "compilerOptions": {
                "tsConfigPath": "apps/event/tsconfig.build.json"
            }
        },
        "@libs/database": {
            "type": "library",
            "root": "libs/database",
            "entryFile": "index",
            "sourceRoot": "libs/database/src",
            "compilerOptions": {
                "tsConfigPath": "libs/database/tsconfig.build.json"
            }
        }
    }
}
